{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
  },
  "watch": [
    "src/app.js",
    "src/common/",
    "src/routes/",
    "src/configs/",
    "src/controllers/",
    "src/middlewares/",
    "src/models/",
    "src/services/",
    "src/utils/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
